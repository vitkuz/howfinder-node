mixin navbar(user)
    nav.navbar.navbar-expand-lg.fixed-top.navbar-dark.bg-dark
        if (user)
            a.navbar-brand.mr-auto.mr-lg-0(href='#') #{user._id}
        else
            a.navbar-brand.mr-auto.mr-lg-0(href='#') HOWFINDER
        button.navbar-toggler.p-0.border-0(type='button', data-toggle='offcanvas')
            span.navbar-toggler-icon
        #navbarsExampleDefault.navbar-collapse.offcanvas-collapse
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href='#')
                        | Dashboard
                        span.sr-only (current)
                li.nav-item
                    a.nav-link(href='#') Notifications
                li.nav-item
                    a.nav-link(href='#') Profile
                li.nav-item
                    a.nav-link(href='#') Switch account
                li.nav-item.dropdown
                    a#dropdown01.nav-link.dropdown-toggle(href='https://example.com', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') User pages
                    .dropdown-menu(aria-labelledby='dropdown01')
                        a.dropdown-item(href='/user') /user
                        a.dropdown-item(href='/user/edit') /user/edit
                        a.dropdown-item(href='/user/password/reset') /user/password/reset
                        a.dropdown-item(href='/user/password') /user/password
                        a.dropdown-item(href='/user/register') /user/register
                        a.dropdown-item(href='/user/login') /user/login
                        a.dropdown-item(href='/user/favorites') /user/favorites
                        a.dropdown-item(href='/user/messages') /user/messages
                        a.dropdown-item(href='/user/history') /user/history
                        a.dropdown-item(href='/user/products') /user/products
                        a.dropdown-item(href='/user/dashboard') /user/dashboard
            form.form-inline.my-2.my-lg-0
                input.form-control.mr-sm-2(type='text', placeholder='Search', aria-label='Search')
                button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search

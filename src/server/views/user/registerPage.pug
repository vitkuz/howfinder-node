extends ../global

include ./mixins/showMessages

block head

block content
    .container.pt2
        h1 #{pageTitle}
        hr
        +showMessages(messages)
        form.form-register(method='POST', action='/user/register')
            .form-group
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required=true, autofocus=true)
            .form-group
                label.sr-only(for='inputUsername') Username
                input#inputUsername.form-control(type='text', name='username', placeholder='Username', required=true)
            .form-group
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password' placeholder='Password', required=true)
            .form-group
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
        .row
            .col-md-12.text-center
                .user-login-page__social-links
                    ul
                        li
                            a(href='/user/auth/facebook') Login with facebook
                        li
                            a(href='/user/auth/google') Login with google
                        li
                            a(href='/user/auth/google') Login with vk
block footer
    script(src='/js/userRegister.js')


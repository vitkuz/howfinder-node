extends ../global
block head

block content
    .container.pt2
        h1 #{title}
        form.form-password-reset
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password', name='password', placeholder='Password', required=true)
            label.sr-only(for='inputPassword2') Repeat password
            input#inputPassword2.form-control(type='password', name='password2', placeholder='Repeat password', required=true)
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Reset
block footer
    script(src='/js/userPasswordReset.js')

extends ../global
block head

block content
    .container.pt2
        h1 #{pageTitle}
        hr
        .error
            if messages.errors && messages.errors.length > 0
                each error in messages.errors
                    .error= error

        form.form-login(method='POST', action='/user/login')
            .form-group
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='true', autofocus='true')
            .form-group
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='true')
            .form-group
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
block footer
    script(src='/js/userLogin.js')
